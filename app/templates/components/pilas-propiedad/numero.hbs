<div class="truncate h2">

  <div class="dib w4">

    <div class='dib bl-0 br-0 bt-0 bb b--dashed cursor-resize'>
      {{propiedad.propiedad}}
    </div>

  </div>

    {{#if editando}}
      <div class="dib w3">
        <input
              class='w-100 v-top outline-0'
              value={{round (get objeto propiedad.propiedad)}}
              oninput={{action (action "modificar_desde_input" objeto propiedad.propiedad) value="target.value"}}
              onblur={{action "cuando_pierde_foco"}}
              onkeyup={{action "cuando_suelta_tecla"}}
              >
      </div>
    {{else}}
      <div class="dib w3 pointer v-top" {{action "comenzar_a_editar"}}>
        {{round (get objeto propiedad.propiedad)}}
      </div>
    {{/if}}

</div>
