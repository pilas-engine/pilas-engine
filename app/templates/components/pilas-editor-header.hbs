<div class="h2-5 flex">

  <div class="pa2 truncate">
    <input class="dn" type="file" id="input-abrir-archivo">

    {{pilas-boton-regresar confirmar=hay_cambios_por_guardar}}

    {{pilas-boton responsive=true svg=true icono="nuevo" desactivado=cargando accion=cuando_crea_un_proyecto demora=0 texto=(t "new")}}
    {{pilas-boton responsive=true svg=true icono="abrir" desactivado=cargando accion=cuando_abre demora=0 texto=(t "open")}}

    {{!-- pilas-boton-abrir responsive=true desactivado=cargando accion_abrir_archivo=cuando_abre --}}

    {{#en-electron}}
      {{pilas-boton svg=true responsive=true icono="guardar" desactivado=cargando accion=cuando_guarda demora=0 texto=(t "save")}}
    {{else}}
      {{pilas-boton svg=true responsive=true icono="guardar" desactivado=cargando accion=cuando_guarda demora=1 texto=(t "save")}}
    {{/en-electron}}

    {{pilas-boton-exportar responsive=true proyecto=proyecto desactivado=(not estado.puedeEjecutar)}}

    {{#en-electron}}
      {{pilas-boton-webserver cargando=cargando}}
    {{/en-electron}}

    {{pilas-boton-animaciones
      desactivado=(not estado.puede_editar)
      pixelart=pixelart
      proyecto=proyecto
      modalVisible=mostrarModalDeAnimaciones}}

    {{pilas-boton-sonidos
      desactivado=(not estado.puede_editar)
      pixelart=pixelart
      proyecto=proyecto
      modalVisible=mostrarModalDeSonidos
    }}

  </div>

  <div class="flex1">
  </div>

  <div class="pa2">
    {{pilas-boton-ayuda
      modal_visible=mostrarModalDeAyuda}}
  </div>

</div>
