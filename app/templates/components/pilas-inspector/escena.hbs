{{pilas-propiedad/nombre
    nombre=instancia_seleccionada.nombre
    objeto=instancia_seleccionada
    cuando_cambia=cuando_cambia_un_nombre_de_escena
}}

{{pilas-propiedad/separador etiqueta="stage.stage" propiedad="Escenario"}}

<div class="pb1">
  {{pilas-propiedad/numero 
    objeto=instancia_seleccionada
    etiqueta="stage.width"
    min=200
    max=9999
    propiedad=propiedad_ancho
    intensidad=1
    modificarAtributo=(action "cuando_cambia_el_tamaño_del_escenario")
  }}
</div>

<div class="pb1">
  {{pilas-propiedad/numero 
    objeto=instancia_seleccionada
    etiqueta="stage.height"
    min=200
    max=9999
    propiedad=propiedad_alto
    intensidad=1
    modificarAtributo=(action "cuando_cambia_el_tamaño_del_escenario")
  }}
</div>


{{#each propiedades as |propiedad|}}

  <div class="pb1">

    {{#if (eq propiedad.tipo "numero")}}

      {{pilas-propiedad/numero objeto=instancia_seleccionada
          etiqueta=propiedad.etiqueta
          min=propiedad.min
          max=propiedad.max
          propiedad=propiedad intensidad=propiedad.intensidad
          modificarAtributo=cuando_modifica_atributo_de_escena}}

    {{else if (eq propiedad.tipo "imagen")}}

      {{pilas-propiedad/imagen objeto=instancia_seleccionada
          etiqueta=propiedad.etiqueta
          propiedad=propiedad
          filtroPropuesto=propiedad.filtroPropuesto
          modificarAtributo=cuando_modifica_atributo_de_escena}}

    {{else if (eq propiedad.tipo "separador")}}

      {{pilas-propiedad/separador
        etiqueta=propiedad.etiqueta
        propiedad=propiedad}}

    {{else}}

      <p class="red">No hay manejador para {{propiedad.propiedad}}</p>

    {{/if}}

  </div>
{{/each}}
