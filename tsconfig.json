{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "outFile": "public/pilas-engine.js"
  },
  "exclude": [
    "app_docs",
    "node_modules",
    "binarios",
    "bower_components",
    "app",
    "dist",
    "public",
    "tmp",
    "config",
    "extra",
    "images",
    "manual",
    "tests",
    "vendor"
  ],
  "filesGlob": ["pilas-engine/**/*.ts"],
  "atom": {
    "rewriteTsconfig": true
  }
}
