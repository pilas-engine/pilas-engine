{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": false,
    "noLib": false,
    "skipLibCheck": true,
    "outFile": "../public/pilas-engine.js",
    "noStrictGenericChecks": true,
    "lib": ["es6", "dom", "es2015"]
  },
  "exclude": ["data", "public"],
  "filesGlob": ["**/*.ts"],
  "atom": {
    "rewriteTsconfig": true
  }
}
